.login-container {
  padding: 40rpx;
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #fff;
}

.login-header {
  text-align: center;
  margin-bottom: 80rpx;
  margin-top: 100rpx;
}

.login-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.login-subtitle {
  font-size: 28rpx;
  color: #666;
}

.login-form {
  width: 100%;
}

.form-item {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.form-item mp-icon {
  margin-right: 20rpx;
}

.form-item input {
  flex: 1;
  height: 80rpx;
  font-size: 32rpx;
}

.error-msg {
  color: #ff4d4f;
  font-size: 24rpx;
  margin-bottom: 20rpx;
}

.login-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #1AAD19;
  color: #fff;
  font-size: 32rpx;
  border-radius: 8rpx;
  margin-top: 40rpx;
}

.login-btn.loading {
  opacity: 0.8;
}

.login-tips {
  margin-top: 40rpx;
  color: #999;
  font-size: 24rpx;
}

.login-tips text {
  display: block;
  line-height: 1.8;
} 