.container {
  padding: 30rpx;
  background: #f8f8f8;
  min-height: 100vh;
}

.section {
  background: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

/* 场地选择 */
.venue-scroll {
  width: 100%;
  white-space: nowrap;
}

.venue-list {
  display: inline-block;
  padding: 10rpx 0;
}

.venue-item {
  display: inline-block;
  width: 400rpx;
  margin-right: 20rpx;
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  border: 2rpx solid #eee;
}

.venue-item.selected {
  border-color: #1AAD19;
}

.venue-item.disabled {
  opacity: 0.6;
}

.venue-image {
  width: 100%;
  height: 200rpx;
}

.venue-info {
  padding: 20rpx;
}

.venue-name {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.venue-capacity, .venue-equipment {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 6rpx;
}

.venue-status {
  font-size: 24rpx;
  margin-top: 10rpx;
}

.venue-status.available {
  color: #1AAD19;
}

.venue-status.unavailable {
  color: #999;
}

/* 时间选择 */
.form-item {
  background: #f5f5f5;
  padding: 20rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.picker {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
}

.picker.placeholder {
  color: #999;
}

/* 用途说明 */
.purpose-input {
  width: 100%;
  min-height: 160rpx;
  font-size: 28rpx;
  line-height: 1.5;
}

/* 预约须知 */
.notice {
  padding: 30rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  margin-bottom: 120rpx;
}

.notice-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.notice-item {
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
}

/* 提交按钮 */
.submit-btn {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 30rpx;
  background: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.05);
}

.btn-primary {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #1AAD19;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
}

.venue-icon {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 120rpx;
  margin: 20rpx 0;
} 