.container {
  padding: 30rpx;
  background: #f8f8f8;
  min-height: 100vh;
}

.history-list {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
}

.history-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 20rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.history-item:last-child {
  border-bottom: none;
}

.room-info {
  flex: 1;
}

.room-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.booking-time {
  font-size: 26rpx;
  color: #666;
}

.booking-status {
  font-size: 28rpx;
  padding: 8rpx 20rpx;
  border-radius: 8rpx;
}

.booking-status.approved {
  color: #1aad19;
  background: rgba(26, 173, 25, 0.1);
}

.booking-status.pending {
  color: #ff976a;
  background: rgba(255, 151, 106, 0.1);
}

.empty-tip {
  text-align: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 28rpx;
} 