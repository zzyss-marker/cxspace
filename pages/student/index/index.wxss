.container {
  padding: 30rpx;
  background: #f8f8f8;
  min-height: 100vh;
}

/* 用户信息 */
.user-info {
  margin-bottom: 30rpx;
}

.welcome {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.department {
  font-size: 28rpx;
  color: #666;
  margin-top: 10rpx;
}

/* 统计信息 */
.statistics {
  display: flex;
  background: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.stat-item {
  flex: 1;
  text-align: center;
}

.stat-item .number {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #1AAD19;
}

.stat-item .number.warning {
  color: #faad14;
}

.stat-item .label {
  font-size: 24rpx;
  color: #666;
}

/* 快速预约 */
.quick-reservation {
  background: #fff;
  padding: 40rpx;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.quick-reservation text {
  font-size: 32rpx;
  color: #1AAD19;
  margin-left: 20rpx;
}

/* 最近预约记录 */
.recent-reservations {
  background: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
}

.view-all {
  font-size: 26rpx;
  color: #1AAD19;
}

.reservation-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.reservation-info .venue-name {
  font-size: 30rpx;
  margin-bottom: 10rpx;
}

.time-info {
  font-size: 24rpx;
  color: #666;
}

.time-info text {
  margin-right: 20rpx;
}

.reservation-status {
  font-size: 26rpx;
}

.reservation-status.pending {
  color: #faad14;
}

.reservation-status.approved {
  color: #1AAD19;
} 