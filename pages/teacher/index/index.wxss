.container {
  padding: 30rpx 20rpx;
  background: #f7f8fa;
  min-height: 100vh;
}

.header {
  background: #ffffff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.welcome {
  margin-bottom: 30rpx;
}

.welcome-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-right: 20rpx;
}

.role-text {
  font-size: 24rpx;
  color: #1989fa;
  background: rgba(25, 137, 250, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.stats-overview {
  display: flex;
  justify-content: space-between;
  padding-top: 20rpx;
  border-top: 1rpx solid #eee;
}

.stats-item {
  text-align: center;
  flex: 1;
}

.stats-num {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #1989fa;
  margin-bottom: 8rpx;
}

.stats-label {
  font-size: 24rpx;
  color: #666;
}

.function-cards {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.function-card {
  background: #ffffff;
  border-radius: 12rpx;
  padding: 30rpx;
  position: relative;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-left: 16rpx;
  color: #333;
}

.card-desc {
  font-size: 26rpx;
  color: #666;
}

.card-badge {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  background: #ee0a24;
  color: #fff;
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 16rpx;
  min-width: 32rpx;
  text-align: center;
}

.logout-button {
  margin-top: 60rpx;
  padding: 0 20rpx;
} 