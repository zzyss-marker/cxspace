.container {
  padding: 30rpx;
  background: #f8f8f8;
  min-height: 100vh;
}

/* 用户信息 */
.user-info {
  margin-bottom: 30rpx;
}

.welcome {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.department {
  font-size: 28rpx;
  color: #666;
  margin-top: 10rpx;
}

/* 统计信息 */
.statistics {
  display: flex;
  background: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.stat-item {
  flex: 1;
  text-align: center;
}

.stat-item .number {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #1AAD19;
}

.stat-item .number.warning {
  color: #faad14;
}

.stat-item .label {
  font-size: 24rpx;
  color: #666;
}

/* 快捷功能 */
.quick-actions {
  background: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.action-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.action-item {
  text-align: center;
  padding: 20rpx;
}

.action-icon {
  width: 80rpx;
  height: 80rpx;
  margin: 0 auto 10rpx;
  /* 使用统一的图标字体 */
}

.action-name {
  font-size: 28rpx;
  color: #333;
}

/* 待审批预约 */
.pending-reservations {
  background: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.view-all {
  font-size: 26rpx;
  color: #1AAD19;
}

.reservation-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.reservation-info {
  margin-bottom: 20rpx;
}

.student-info {
  margin-bottom: 10rpx;
}

.student-name {
  font-size: 30rpx;
  font-weight: bold;
  margin-right: 20rpx;
}

.student-id {
  font-size: 26rpx;
  color: #666;
}

.venue-info {
  margin-bottom: 10rpx;
}

.venue-name {
  font-size: 28rpx;
  margin-right: 20rpx;
}

.time-info {
  font-size: 26rpx;
  color: #666;
}

.purpose, .submit-time {
  font-size: 26rpx;
  color: #666;
  margin-top: 6rpx;
}

.approval-actions {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
}

.btn-approve, .btn-reject {
  min-width: 160rpx;
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  border-radius: 32rpx;
  font-size: 26rpx;
}

.btn-approve {
  background: #1AAD19;
  color: #fff;
}

.btn-reject {
  background: #fff;
  color: #ff4d4f;
  border: 1rpx solid #ff4d4f;
} 