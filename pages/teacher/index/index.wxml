<view class="container">
  <!-- 用户信息 -->
  <view class="user-info">
    <view class="welcome">你好，{{userInfo.name}}</view>
    <view class="department">{{userInfo.department}}</view>
  </view>

  <!-- 统计信息 -->
  <view class="statistics">
    <view class="stat-item">
      <text class="number warning">{{statistics.pendingCount}}</text>
      <text class="label">待审批</text>
    </view>
    <view class="stat-item">
      <text class="number">{{statistics.todayCount}}</text>
      <text class="label">今日预约</text>
    </view>
    <view class="stat-item">
      <text class="number">{{statistics.totalCount}}</text>
      <text class="label">总预约</text>
    </view>
  </view>

  <!-- 快捷功能 -->
  <view class="quick-actions">
    <view class="section-title">快捷功能</view>
    <view class="action-grid">
      <view class="action-item" 
            wx:for="{{quickActions}}" 
            wx:key="id"
            bindtap="handleQuickAction"
            data-path="{{item.path}}">
        <view class="action-icon {{item.icon}}"></view>
        <view class="action-name">{{item.name}}</view>
      </view>
    </view>
  </view>

  <!-- 待审批预约 -->
  <view class="pending-reservations">
    <view class="section-header">
      <text class="section-title">待审批预约</text>
      <text class="view-all" bindtap="handleQuickAction" data-path="/pages/teacher/approval/approval">
        查看全部
      </text>
    </view>
    <view class="reservation-list">
      <view class="reservation-item" 
            wx:for="{{pendingReservations}}" 
            wx:key="id">
        <view class="reservation-info" bindtap="viewReservationDetail" data-id="{{item.id}}">
          <view class="student-info">
            <text class="student-name">{{item.studentName}}</text>
            <text class="student-id">{{item.studentId}}</text>
          </view>
          <view class="venue-info">
            <text class="venue-name">{{item.venueName}}</text>
            <text class="time-info">{{item.date}} {{item.timeSlot}}</text>
          </view>
          <view class="purpose">用途：{{item.purpose}}</view>
          <view class="submit-time">提交时间：{{item.submitTime}}</view>
        </view>
        <view class="approval-actions">
          <button class="btn-approve" bindtap="handleApproval" data-id="{{item.id}}" data-action="approve">
            通过
          </button>
          <button class="btn-reject" bindtap="handleApproval" data-id="{{item.id}}" data-action="reject">
            拒绝
          </button>
        </view>
      </view>
    </view>
  </view>
</view> 