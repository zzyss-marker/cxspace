<view class="container">
  <view class="user-info">
    <view class="welcome">欢迎，{{ userInfo.name }}</view>
    <view class="department">教师管理系统</view>
  </view>

  <view class="statistics">
    <view class="stat-item">
      <text class="number">{{ stats.pending || 0 }}</text>
      <text class="label">待审批</text>
    </view>
    <view class="stat-item">
      <text class="number">{{ stats.today || 0 }}</text>
      <text class="label">今日预约</text>
    </view>
    <view class="stat-item">
      <text class="number">{{ stats.total || 0 }}</text>
      <text class="label">总预约</text>
    </view>
  </view>

  <view class="quick-actions">
    <view class="section-title">快捷功能</view>
    <view class="action-grid">
      <view class="action-item" bindtap="navigateTo" data-url="/pages/teacher/approval/approval">
        <van-icon name="passed" size="48rpx" color="#1AAD19"/>
        <text>审批管理</text>
      </view>
      <view class="action-item" bindtap="navigateTo" data-url="/pages/teacher/venue/venue">
        <van-icon name="shop" size="48rpx" color="#1AAD19"/>
        <text>场地管理</text>
      </view>
      <view class="action-item" bindtap="navigateTo" data-url="/pages/teacher/statistics/statistics">
        <van-icon name="chart-trending-o" size="48rpx" color="#1AAD19"/>
        <text>数据统计</text>
      </view>
    </view>
  </view>
</view> 