.page-header {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #fff;
  border-bottom: 1rpx solid #eee;
}

.header-title {
  margin-left: 16rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.container {
  padding-bottom: 40rpx;
}

.stats-card {
  background: #fff;
  border-radius: 8rpx;
  margin: 20rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.card-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.stats-item, .purpose-item {
  margin-bottom: 20rpx;
}

.venue-info, .purpose-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.venue-name, .purpose-name {
  color: #333;
  font-size: 28rpx;
}

.usage-count, .purpose-count {
  color: #666;
  font-size: 24rpx;
}

.progress-bar {
  background: #f5f5f5;
  height: 12rpx;
  border-radius: 6rpx;
  overflow: hidden;
}

.progress {
  background: #1989fa;
  height: 100%;
  transition: width 0.3s ease;
}

.time-slots {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.time-slot-item {
  background: #f8f8f8;
  padding: 20rpx;
  border-radius: 8rpx;
  text-align: center;
}

.time-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.slot-count {
  font-size: 32rpx;
  font-weight: bold;
  color: #1989fa;
  margin-bottom: 4rpx;
}

.slot-percentage {
  font-size: 24rpx;
  color: #666;
} 